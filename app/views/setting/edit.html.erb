<h1>Setting</h1>

<%= form_for :setting, url: update_setting_path, method: :patch do |f| %>
  <table>
    <tr>
      <th>Name: </th>
      <td> <%= f.text_field :name %> </td>
    </tr>
    <tr>
      <th>OAuth ID: </th>
      <td> <%= f.text_field :oauth_id %> </td>
    </tr>
    <tr>
      <th>OAuth Secret: </th>
      <td> <%= f.text_field :oauth_secret %> </td>
    </tr>
    <tr>
      <th></th>
      <td> <%= f.submit 'Set' %> </td>
    </tr>
  </table>
<% end %>

<%= link_to 'Back', setting_path %>
